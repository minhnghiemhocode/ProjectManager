<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvWorkspaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new project"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nhập tên workspace -->
    <EditText
        android:id="@+id/edtWorkspaceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter project name"
        android:background="@drawable/bg_input"
        android:padding="14dp"
        android:textColor="#000000"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvWorkspaceTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Nút tạo có gradient -->
    <Button
        android:id="@+id/btnCreate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        app:backgroundTint="@null"
        android:background="@drawable/bg_button_gradient"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edtWorkspaceName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút huỷ -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_button_gradient_light"
        app:backgroundTint="@null"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
