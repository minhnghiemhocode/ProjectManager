<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:clipToPadding="false">

    <!-- KHUNG GRADIENT -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/checklist_bg_gradient"
        android:padding="12dp">

        <!-- CheckBox hiển thị nội dung -->
        <CheckBox
            android:id="@+id/cbChecklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung checklist"
            android:textColor="#212121"
            android:textSize="15sp"
            android:buttonTint="#000000"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

        <!-- EditText ẩn, dùng khi muốn sửa nội dung -->
        <EditText
            android:id="@+id/edtChecklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="#212121"
            android:background="@android:color/transparent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />
    </LinearLayout>

    <!-- NÚT XOÁ -->
    <ImageView
        android:id="@+id/btnDeleteChecklist"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_delete"
        app:tint="#BF1616"
        android:visibility="gone"
        android:contentDescription="Xóa checklist" />
</LinearLayout>
