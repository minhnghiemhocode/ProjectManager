<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn người"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/itemUser1" style="@style/PopupItem" android:text="First People" />
        <TextView android:id="@+id/itemUser2" style="@style/PopupItem" android:text="Second People" />
        <TextView android:id="@+id/itemUser3" style="@style/PopupItem" android:text="Third People" />
    </LinearLayout>
</LinearLayout>
