<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlainPopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_white</item>
        <item name="android:textColor">#000000</item> <!-- hoặc @color/black -->
    </style>

    <style name="PopupItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="ToolbarTitleBold" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/official_font</item> <!-- sử dụng tên file không có đuôi .ttf -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
